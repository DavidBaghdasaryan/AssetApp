@model DAL.Model.Implementation.BDProject

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.IsUpdated != false ? "Update Project" : "Create Project") @Model.Name</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="@Model.ProjectId" hidden />

            <div class="row">
                <div class="col-10">
                    <div class="border p-3">

                        <div class="form-floating py-2 col-12">
                            <label asp-for="@Model.Name" class="ms-2 text-muted"></label>
                            <textarea asp-for="@Model.Name" class="form-control border-0 shadow"></textarea>
                            <span asp-validation-for="@Model.Name" class="text-danger"> </span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="@Model.Code" class="ms-2 text-muted"></label>
                            <textarea asp-for="@Model.Code" class="form-control border-0 shadow"></textarea>
                            <span asp-validation-for="@Model.Code class=" text-danger"> </span>
                        </div>


                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (@Model.IsUpdated != false)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                               
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Back to List
                                </a>
                            </div> <div class="col-6 col-md-3">
                                <a asp-controller="BuildingGroup" asp-action="BuildingGroup" asp-route-prodId="@Model.ProjectId" class="btn btn-outline-primary border form-control">
                                    Go to Building Groups
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
